<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_color"
    >

    <!--
    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"/>
    -->

    <RelativeLayout
            android:id="@+id/ll_center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_list_main_height"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10">

            <ImageView
                android:id="@+id/iv_home_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true" />


            <LinearLayout
                android:id="@+id/ll_home_list_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_home_icon"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/iv_home_list_country_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_home_list_country_flag"
                        android:layout_width="@dimen/margin_15"
                        android:layout_height="@dimen/margin_15"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:src="@drawable/icon_location"
                        android:visibility="gone" />

                </LinearLayout>


                <TextView
                    android:id="@+id/iv_home_list_country_nation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:textColor="@color/primary_gray"
                    android:textSize="12sp" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_home_list_country_time_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00: 11"
                        android:textColor="@color/primary_white"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_home_list_country_time_am_pm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:textColor="@color/primary_gray"
                        android:textSize="12sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_home_list_country_time_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="1月4号 - Wed"
                    android:textColor="@color/primary_gray"
                    android:textSize="12sp" />

            </LinearLayout>


        </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_home_list_item_sub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_list_sub_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:src="@drawable/icon_exchange_rate"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:orientation="horizontal"
            android:gravity="bottom">

            <TextView
                android:id="@+id/tv_home_list_item_coin_value_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="15sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_home_list_item_coin_name_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:text="CNY"
                android:textSize="12sp"
                android:textColor="@color/white"/>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="=>"
            android:textSize="12sp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:orientation="horizontal"
            android:gravity="bottom">

            <TextView
                android:id="@+id/tv_home_list_item_coin_ratio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.123"
                android:textSize="15sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_home_list_item_coin_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:text="CNY"
                android:textSize="12sp"
                android:textColor="@color/white"/>

        </LinearLayout>


    </LinearLayout>

    <!--
    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"/>

    -->

    <View
        android:id="@+id/v_home_list_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/transparent_white_10"/>

</LinearLayout>