<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_padding_top"
        android:background="@color/primary_black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/primary_white">
        <ImageView
            android:id="@+id/iv_back"
            android:src="@drawable/icon_back_black"
            android:scaleType="centerInside"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_default"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_select"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/title_size"
            android:layout_gravity="center_vertical"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_10"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/iv_return_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/icon_home"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"/>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_size"
        android:background="@color/primary_line_gray"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_select_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/sv_select_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_europe"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="@dimen/margin_10"
                android:background="@drawable/selector_btn_primary">

                <TextView
                    android:id="@+id/tv_europe"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:ems="1"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:text="欧洲"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_europe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv_europe"
                    fresco:roundedCornerRadius="3dp"
                    fresco:roundBottomRight="false"
                    fresco:roundTopRight="false"
                    fresco:actualImageScaleType="centerCrop"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_asia"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="@dimen/margin_10"
                android:background="@drawable/selector_btn_primary">

                <TextView
                    android:id="@+id/tv_asia"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:ems="1"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:text="亚洲"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_asia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv_asia"
                    fresco:roundedCornerRadius="3dp"
                    fresco:roundBottomRight="false"
                    fresco:roundTopRight="false"
                    fresco:actualImageScaleType="centerCrop"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_africa"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="@dimen/margin_10"
                android:background="@drawable/selector_btn_primary">

                <TextView
                    android:id="@+id/tv_africa"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:ems="1"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:text="非洲"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_africa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv_africa"
                    fresco:roundedCornerRadius="3dp"
                    fresco:roundBottomRight="false"
                    fresco:roundTopRight="false"
                    fresco:actualImageScaleType="centerCrop"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_america"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="@dimen/margin_10"
                android:background="@drawable/selector_btn_primary">

                <TextView
                    android:id="@+id/tv_america"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:ems="1"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:text="美洲"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_america"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv_america"
                    fresco:roundedCornerRadius="3dp"
                    fresco:roundBottomRight="false"
                    fresco:roundTopRight="false"
                    fresco:actualImageScaleType="centerCrop"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_oceania"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="@dimen/margin_10"
                android:background="@drawable/selector_btn_primary">

                <TextView
                    android:id="@+id/tv_oceania"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:ems="1"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:text="大洋洲"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_oceania"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv_oceania"
                    fresco:roundedCornerRadius="3dp"
                    fresco:roundBottomRight="false"
                    fresco:roundTopRight="false"
                    fresco:actualImageScaleType="centerCrop"/>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>