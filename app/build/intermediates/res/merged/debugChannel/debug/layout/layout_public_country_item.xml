<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/country_list_item_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/country_list_item_margin_left"
        android:layout_marginRight="@dimen/country_list_item_margin_right">

    <ImageView
        android:id="@+id/iv_public_list_country_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star_big_on"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_public_list_country_flag"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/country_list_item_name_margin_left"
        >

        <TextView
            android:id="@+id/tv_public_list_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="瑞士"
            android:textColor="@color/primary_black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_public_list_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哥本哈根"
            android:textColor="@color/sub_title"
            android:textSize="14sp"/>

    </LinearLayout>


    <View
        android:id="@+id/iv_public_list_country_select"
        android:layout_width="@dimen/margin_10"
        android:layout_height="@dimen/margin_10"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/select_country_list_item"/>

    </RelativeLayout>

</LinearLayout>